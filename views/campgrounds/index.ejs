<% layout('layout/boilerplate') %>

<h1>All Campgrounds</h1>
<a href="/campgrounds/new">Add new campground</a>
<ul>
  <% for(let camp of campgrounds) {%>
  <div class="card mb-2">
    <div class="row">
      <div class="col-md-4">
        <img class="img-fluid" src="<%=camp.images[0].url %>" alt="" />
      </div>
      <div class="col-md-8">
        <h5 class="card-title mt-2"><%= camp.title %></h5>
        <p class="card-text"><%=camp.description %></p>
        <small class="text-muted"><%= camp.location %></small>
        <p class="mt-2">
          <a href="/campgrounds/<%=camp._id%>" class="btn btn-primary">View </a>
        </p>
      </div>
    </div>
  </div>

  <% }%>
</ul>
